{
  "name": "code-skeleton",
  "version": "1.0.1",
  "description": "a framework for creating versioned project templates",
  "main": "lib/index.js",
  "bin": {
    "code-skeleton": "bin/code-skeleton.js"
  },
  "scripts": {
    "clean": "./scripts/clean.ts",
    "prelint": "tsc --noEmit",
    "lint": "eslint .",
    "prepack": "tsc --project tsconfig.build.json",
